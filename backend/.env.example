# Database Configuration
#  IMPORTANT: Change all values below for your deployment
# Do NOT commit real credentials - use strong, unique passwords
DB_HOST=<your-database-host>
DB_PORT=3306
DB_USER=<database-user>
DB_PASSWORD=<secure-database-password>
DB_NAME=kudos_system

# Server Configuration
PORT=3000
NODE_ENV=production

# JWT Configuration
# CRITICAL: Generate a unique secret for each environment
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# Replace value below with generated output
JWT_SECRET=<generate-unique-jwt-secret>
JWT_EXPIRY=24h

# Redis Configuration (Optional)
REDIS_HOST=<redis-host>
REDIS_PORT=6379
REDIS_PASSWORD=<redis-password>

# CORS Configuration
# Set to your actual frontend domain in production
CORS_ORIGIN=<your-frontend-domain>
